<?xml version="1.0" encoding="utf-8"?>

<com.iwuyou.libmine.view.timessquare.MonthView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        style="@style/CalendarTitle"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_marginBottom="@dimen/calendar_month_title_bottommargin"
        android:layout_marginLeft="72dp"
        android:textColor="#ff5454"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/calendar_month_topmargin"
        android:gravity="center_vertical" />

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="72dp"
        android:background="#e3e4e8"
        android:layout_height="1dp"/>

    <com.iwuyou.libmine.view.timessquare.CalendarGridView
        android:id="@+id/calendar_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.iwuyou.libmine.view.timessquare.CalendarRowView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/calendar_day_headers_paddingbottom">

            <TextView
                style="@style/CalendarCell.DayHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/CalendarCell.DayHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/CalendarCell.DayHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/CalendarCell.DayHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/CalendarCell.DayHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/CalendarCell.DayHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/CalendarCell.DayHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.iwuyou.libmine.view.timessquare.CalendarRowView>

        <include layout="@layout/week" />

        <include layout="@layout/week" />

        <include layout="@layout/week" />

        <include layout="@layout/week" />

        <include layout="@layout/week" />

        <include layout="@layout/week" />
    </com.iwuyou.libmine.view.timessquare.CalendarGridView>
</com.iwuyou.libmine.view.timessquare.MonthView>